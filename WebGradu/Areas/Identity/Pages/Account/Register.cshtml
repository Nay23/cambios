@page
@model WebGradu.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrar Usuario";
    Layout = "~/Views/Shared/_Plantilla.cshtml";
}

<div class="container mt-5">
    <div class="card" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header text-center">
            <h1 class="card-title">@ViewData["Title"]</h1>
        </div>
        <div class="card-body">
            <form method="post" novalidate>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Input.FirstName">Nombre <span class="text-danger">*</span></label>
                    <input asp-for="Input.FirstName" class="form-control" placeholder="Ingrese su nombre" required />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.LastName">Apellido <span class="text-danger">*</span></label>
                    <input asp-for="Input.LastName" class="form-control" placeholder="Ingrese su apellido" required />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Email">Correo Electrónico <span class="text-danger">*</span></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Ingrese su correo electrónico" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Password">Contraseña <span class="text-danger">*</span></label>
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Ingrese su contraseña" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword">Confirmar Contraseña <span class="text-danger">*</span></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirme su contraseña" required />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">Registrarse</button>
            </form>
        </div>
    </div>

 
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
