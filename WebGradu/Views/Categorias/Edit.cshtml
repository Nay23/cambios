@model WebGradu.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
    Layout = "~/Views/Shared/_Plantilla.cshtml";
}

<div class="container mt-5" style="max-width: 800px;">
    <div class="row">
        <div class="col-md-12">

            <div class="d-flex flex-column flex-md-row" style="background-color: #f8f9fa; padding: 20px; border-radius: 4px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <!-- Columna para la imagen y el formulario juntos -->
                <div class="d-flex flex-column align-items-start mb-4 mb-md-0" style="margin-right: 20px;">
                    <a asp-action="Index" class="btn btn-warning btn-sm mb-3" title="Ver Lista"><i class="bi bi-arrow-return-left"></i>Listado</a>
                    <img src="~/img/categorias.jpg" alt="Imagen de la Categoría" class="img-fluid" style="max-height: 600px; width: 100%; max-width: 400px; object-fit: cover; border-radius: 5px;" />
                </div>

                <!-- Columna para el formulario -->
                <div class="card p-4 shadow-sm" style="background-color: #f8f9fa; width: 100%; max-width: 400px;">
                    <form asp-action="Edit" method="post">
                        <center><h2 class="mb-4">Editar Categoría</h2></center>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CategoriaID" />

                        <div class="form-group mb-3">
                            <label asp-for="NombreCategoria" class="form-label">Nombre de la categoría</label>
                            <input asp-for="NombreCategoria" class="form-control" style="max-width: 100%;" required />
                            <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción de la categoría</label>
                            <textarea asp-for="Descripcion" class="form-control" style="max-width: 100%;" rows="4" required></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                       

                        <div class="form-group mb-4 d-flex justify-content-start">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fa-solid fa-save"></i> Guardar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
