@model WebGradu.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="container mt-5" style="max-width: 800px;">
    <div class="row">
        <div class="col-md-12">

            <div class="d-flex flex-column flex-md-row" style="background-color: #f8f9fa; padding: 20px; border-radius: 4px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <!-- Columna para la imagen y el formulario juntos -->
                <div class="d-flex align-items-center mb-4 mb-md-0" style="margin-right: 0; margin-bottom: 20px;">
                    <img src="~/img/categorias.jpg" alt="Imagen de la Categoría" class="img-fluid" style="max-height: 300px; width: 100%; max-width: 400px; object-fit: cover; border-radius: 5px;" />
                </div>

                <!-- Columna para el formulario -->
                <div class="card p-4 shadow-sm" style="background-color: #f8f9fa; width: 100%; max-width: 400px;">
                    <form asp-action="Create" method="post">
                        <center><h2 class="mb-4">Crear Categoría</h2></center>

                        <div class="form-group mb-3">
                            <label asp-for="NombreCategoria" class="form-label">Nombre de la categoría</label>
                            <input asp-for="NombreCategoria" class="form-control" style="max-width: 100%;" placeholder="" required />
                            <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción de la categoría</label>
                            <textarea asp-for="Descripcion" class="form-control" style="max-width: 100%;" rows="4" placeholder="" required></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <button type="submit" class="btn btn-success" style="width: 100px;">
                                <i class="fa-solid fa-folder-arrow-up"></i> Crear
                            </button>
                            <a asp-action="Index" class="btn btn-warning btn-sm ms-2" title="Ver Lista">Listado</a>
                        </div>
                    </form>

                    <!-- Incluye SweetAlert -->
                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                    <script>
                        @if (TempData["CategoriaCreada"] != null)
                        {
                            <text>
                                Swal.fire({
                                    title: 'Categoría Creada',
                                    text: 'La categoría ha sido creada exitosamente.',
                                    icon: 'success',
                                    confirmButtonText: 'OK'
                                });
                            </text>
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
