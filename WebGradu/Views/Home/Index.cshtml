@{
    ViewData["Title"] = "Home Page";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (User.Identity.IsAuthenticated && TempData["StockBajo"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show d-flex flex-column align-items-start" role="alert" style="width: 500px; padding: 1rem; font-size: 1.25rem;">
        <div class="d-flex align-items-center">
            <i class="bi bi-bell-fill" style="font-size: 1.75rem; color: red; margin-right: 10px;"></i> <!-- Ícono de campanita -->
            <span style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@TempData["StockBajo"]</span>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <!-- Botón debajo del texto -->
        <div class="mt-2">
            <a asp-controller="Notificaciones" asp-action="Index" class="btn btn-outline-primary d-flex align-items-center" style="font-size: 1rem;">
                <i class="bi bi-eye-fill me-2"></i> <!-- Ícono de ojito -->
                Visualizar Notificaciones
            </a>
        </div>
    </div>

    <script>
        // Ocultar la alerta después de 2 minutos (120000 ms)
        setTimeout(function () {
            $('.alert').alert('close');
        }, 120000);
    </script>
}


<div style="display: flex; flex-direction: column; justify-content: center; align-items: center; min-height: 100vh; text-align: center;">
    <h1 class="animate__animated animate__fadeInDown" style="font-family: 'Dreaming Outloud Pro', 'Cursive'; font-style: italic; color: white; font-size: 2.5rem;">
        Bienvenidos a Yeishop
    </h1>

    <div style="margin-top: 20px;">
        <img src="~/images/logito.png" class="animate__animated animate__zoomIn" height="300" width="300" />
    </div>

    <div style="margin-top: 40px; text-align: center;">
        <h1 style="font-family: 'Dreaming Outloud Pro', 'Cursive'; font-style: italic; color: white;">
            SOMOS SUEÑOS, SOMOS PERSEVERANCIA, SOMOS AMOR<br>"SOMOS UN MUNDO DE COLORES"
        </h1>
    </div>
</div>


