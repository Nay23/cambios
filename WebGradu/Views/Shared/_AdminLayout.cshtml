<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Panel de Administrador</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
</head>
<body>
    <header>
        <h1>Panel de Administración - @((User?.Identity?.IsAuthenticated == true) ? User.Identity.Name : "Invitado")</h1>
        <!-- Menú exclusivo para administradores -->
        <partial name="_LoginPartial" /> 
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p>© 2024 - Mi Aplicación - Admin Panel</p>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
