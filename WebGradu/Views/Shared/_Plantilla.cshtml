<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebGradu</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Sugar+Bread&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <style>
        /* Estilos para eliminar el fondo de los botones */
        .navbar-nav .nav-link {
            color: white !important;
            font-size: 1.1rem;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: lightblue !important;
            }

        .dropdown-menu {
            background-color: white;
            border: none;
        }

        .dropdown-item:hover {
            background-color: lightgray;
        }

        .navbar {
            background-color: #1E3A8A; /* Azul marino pastel (Hex: #1E3A8A) */
        }

        /* Estilo de los botones de toggler */
        .navbar-toggler {
            border: none;
        }

        .navbar-toggler-icon {
            filter: invert(1); /* Color blanco para el icono del toggler */
        }

        /* Estilo general del body */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        /* Aseguramos que el contenido ocupe el espacio restante */
        main {
            flex: 1;
        }

        /* Estilo del contenedor principal */
        .container-fluid {
            max-width: 1100px;
            margin: 0 auto;
        }

        /* Estilo del encabezado */
        .header {
            text-align: center;
            padding: 20px 0;
        }

            .header img {
                width: 80px;
                margin-right: 15px;
            }

            .header h1 {
                display: inline-block;
                font-size: 2.5rem;
                color: #333;
            }
    </style>
</head>
<body>
    <!-- Menú de navegación -->
    <nav class="navbar navbar-expand-sm">
        <div class="container-fluid">
            <!-- Enlace de Inicio -->
            <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>

            <!-- Botón para colapsar en pantallas pequeñas -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Contenido colapsable -->
            <div class="navbar-collapse collapse d-sm-flex">
                <!-- Pestañas de menú alineadas a la izquierda -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Productos
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Productos" asp-action="Crear">Crear Producto</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Stock" asp-action="Index">Catálogo</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Notificaciones" asp-action="Index">Stock Bajo</a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Categoría
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Categorias" asp-action="Index">Listado</a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Ventas
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Ventas" asp-action="Crear">Registrar Venta</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div class="d-flex align-items-center">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/ChangePassword" title="Manage">
                        <i class="bi bi-person-fill" style="font-size: 2rem; color: blue;"></i> <!-- Ícono de usuario en azul -->
                    </a>
                </li>

                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-white" style="font-size: 1.25rem;">
                            <i class="bi bi-box-arrow-right"></i> <!-- Ícono de salida -->
                            Salir
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts de Bootstrap y otros -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
